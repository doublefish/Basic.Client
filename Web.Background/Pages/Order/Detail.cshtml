@page "{id:int}"
@{
	ViewData["Title"] = "详情";
	var Id = RouteData.Values["id"];
}

<div class="layui-card">
	<div class="layui-card-body">
		<div class="layui-form">
			<input type="hidden" name="Id" id="Id" value="@Id" />
			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">编号</label>
					<div class="layui-input-inline">
						<span class="layui-span" id="Number"></span>
					</div>
				</div>
				<div class="layui-inline">
					<label class="layui-form-label">产品名称</label>
					<div class="layui-input-inline" style="width: 300px;">
						<span class="layui-span" id="ProductName"></span>
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">产品价格</label>
					<div class="layui-input-inline">
						<span class="layui-span" id="ProductPrice"></span>
					</div>
				</div>
				<div class="layui-inline">
					<label class="layui-form-label">出行日期</label>
					<div class="layui-input-inline">
						<span class="layui-span" id="Date"></span>
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">成人人数</label>
					<div class="layui-input-inline">
						<span class="layui-span" id="Adults"></span>
					</div>
				</div>
				<div class="layui-inline">
					<label class="layui-form-label">儿童人数</label>
					<div class="layui-input-inline">
						<span class="layui-span" id="Children"></span>
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">姓名</label>
					<div class="layui-input-inline">
						<span class="layui-span" id="FullName"></span>
					</div>
				</div>
				<div class="layui-inline">
					<label class="layui-form-label">手机号码</label>
					<div class="layui-input-inline">
						<span class="layui-span" id="Mobile"></span>
					</div>
				</div>
				<div class="layui-inline">
					<label class="layui-form-label">电子邮箱</label>
					<div class="layui-input-inline">
						<span class="layui-span" id="Email"></span>
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">成人价格</label>
					<div class="layui-input-inline">
						<span class="layui-span" id="AdultPrice"></span>
					</div>
				</div>
				<div class="layui-inline">
					<label class="layui-form-label">儿童价格</label>
					<div class="layui-input-inline">
						<span class="layui-span" id="ChildPrice"></span>
					</div>
				</div>
				<div class="layui-inline">
					<label class="layui-form-label">成交总价</label>
					<div class="layui-input-inline">
						<span class="layui-span" id="TotalPrice"></span>
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">状态</label>
					<div class="layui-input-inline">
						<span class="layui-span" id="Status"></span>
					</div>
				</div>
				<div class="layui-inline">
					<label class="layui-form-label">提交时间</label>
					<div class="layui-input-inline">
						<span class="layui-span" id="CreateTime"></span>
					</div>
				</div>
				<div class="layui-inline">
					<label class="layui-form-label">完成时间</label>
					<div class="layui-input-inline">
						<span class="layui-span" id="UpdateTime"></span>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts{
	<script src="~/js/order/detail.js?v=20200403"></script>
}
