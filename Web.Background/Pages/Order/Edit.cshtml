@page "{id:int}"
@{
	ViewData["Title"] = "编辑";
	var Id = RouteData.Values["id"];
}

<div class="layui-card">
	<div class="layui-card-body">
		<form class="layui-form" lay-filter="edit">
			<input type="hidden" name="Id" id="Id" value="@Id" />
			<div class="layui-form-item">
				<label class="layui-form-label">订单编号</label>
				<div class="layui-input-block">
					<span class="layui-span" id="Number"></span>
				</div>
			</div>
			<div class="layui-form-item">
				<label class="layui-form-label">产品名称</label>
				<div class="layui-input-block">
					<span class="layui-span" id="ProductName"></span>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">产品价格</label>
					<div class="layui-input-inline">
						<span class="layui-span" id="ProductPrice"></span>
					</div>
				</div>
				<div class="layui-inline">
					<label class="layui-form-label">出行日期</label>
					<div class="layui-input-inline">
						<span class="layui-span" id="Date"></span>
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">成人价格</label>
					<div class="layui-input-inline">
						<input type="text" class="layui-input" name="AdultPrice" id="AdultPrice" placeholder="请输入" lay-verify="required|number|price" autocomplete="off" />
					</div>
					<div class="layui-form-mid">元</div>
				</div>
				<div class="layui-inline">
					<label class="layui-form-label">成人数</label>
					<div class="layui-input-inline">
						<span class="layui-span" id="Adults"></span>
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<div class="layui-inline">
					<label class="layui-form-label">儿童价格</label>
					<div class="layui-input-inline">
						<input type="text" class="layui-input" name="ChildPrice" id="ChildPrice" placeholder="请输入" lay-verify="required|number|price" autocomplete="off" />
					</div>
					<div class="layui-form-mid">元</div>
				</div>
				<div class="layui-inline">
					<label class="layui-form-label">儿童数</label>
					<div class="layui-input-inline">
						<span class="layui-span" id="Children"></span>
					</div>
				</div>
			</div>
			<div class="layui-form-item">
				<label class="layui-form-label">成交总价</label>
				<div class="layui-input-inline">
					<span class="layui-span" id="TotalPrice"></span>
				</div>
				<div class="layui-form-mid layui-word-aux">成交总价 = 成人价格 × 成人数 + 儿童价格 × 儿童数</div>
			</div>
			<div class="layui-form-item">
				<label class="layui-form-label">说明</label>
				<div class="layui-input-block">
					<textarea class="layui-textarea" name="Note" id="Note" placeholder="请输入" lay-verify="note"></textarea>
				</div>
				<div class="layui-input-block">
					<div class="layui-form-mid layui-word-aux">请输入200个字符以内的说明</div>
				</div>
			</div>
			<div class="layui-form-item layui-hide">
				<div class="layui-input-block">
					<button type="button" class="layui-btn" lay-submit="" lay-filter="submit" id="submit">提交</button>
				</div>
			</div>
		</form>
	</div>
</div>

@section Scripts{
	<script src="~/js/order/edit.js?=20200403"></script>
}
